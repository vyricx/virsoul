<Window x:Class="VirSoul.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VirSoul"
        Icon="Assets/appicon.ico"
        Width="700" Height="500"
        MinWidth="400" MinHeight="300"
        ResizeMode="CanResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="36"
                      ResizeBorderThickness="8"
                      GlassFrameThickness="0,0,0,1"
                      CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <!-- Outer border provides rounded corners and clips the background image -->
    <Border CornerRadius="10" ClipToBounds="True">
        <Border.Background>
            <ImageBrush ImageSource="Assets/grainient.png" Stretch="UniformToFill" />
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Custom title bar (transparent, draggable via WindowChrome CaptionHeight) -->
            <Grid Grid.Row="0" Background="Transparent">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            WindowChrome.IsHitTestVisibleInChrome="True">

                    <!-- Minimize button -->
                    <Button x:Name="MinimizeButton"
                            Click="MinimizeButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Width" Value="46" />
                                <Setter Property="Height" Value="36" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="Transparent"
                                                    CornerRadius="5"
                                                    Width="46" Height="36">
                                                <Path Data="M 0,0 H 10"
                                                      Stretch="None"
                                                      Stroke="White"
                                                      StrokeThickness="1.2"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background"
                                                            Value="#33FFFFFF" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background"
                                                            Value="#55FFFFFF" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Close button -->
                    <Button x:Name="CloseButton"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Width" Value="46" />
                                <Setter Property="Height" Value="36" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="Transparent"
                                                    CornerRadius="0,10,0,0"
                                                    Width="46" Height="36">
                                                <Path Data="M 0,0 L 10,10 M 10,0 L 0,10"
                                                      Stretch="None"
                                                      Stroke="White"
                                                      StrokeThickness="1.2"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background"
                                                            Value="#CCDC3545" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background"
                                                            Value="#AADC3545" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Grid>

            <!-- Main content area -->
            <Grid Grid.Row="1">
                <Border Background="#80000000"
                        CornerRadius="10"
                        Width="300"
                        Padding="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
            </Grid>

        </Grid>
    </Border>
</Window>
